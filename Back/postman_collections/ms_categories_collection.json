        {
          "name": "Create Expense Category - Alimentación",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"expenseCategoryId1\", jsonData.categoryId);",
                  "    pm.test(\"Category created successfully\", function () {",
                  "        pm.expect(jsonData.categoryId).to.not.be.undefined;",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alimentación\",\n  \"description\": \"Gastos en comida, restaurantes y supermercado\",\n  \"type\": \"EXPENSE\"\n}"
            },
            "url": {
              "raw": "{{ms_categories_url}}/api/v1/categories",
              "host": ["{{ms_categories_url}}"],
              "path": ["api", "v1", "categories"]
            },
            "description": "Crea una categoría de tipo EXPENSE para gastos de alimentación."
          },
          "response": []
        },
